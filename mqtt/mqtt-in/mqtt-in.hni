<script type="text/x-red" data-template-name="mqtt-in">
    <div class="form-row">
        <label for="node-input-broker"><i class="fa fa-globe"></i> <span data-i18n="mqtt-in.label.broker"></span></label>
        <input type="text" id="node-input-broker">
    </div>
    <div class="form-row">
        <label for="node-input-topic"><i class="fa fa-tasks"></i> <span data-i18n="common.label.topic"></span></label>
        <input type="text" id="node-input-topic" data-i18n="[placeholder]common.label.topic">
    </div>
    <div class="form-row">
        <label for="node-input-name"><i class="fa fa-tag"></i> <span data-i18n="common.label.name"></span></label>
        <input type="text" id="node-input-name" data-i18n="[placeholder]common.label.name">
    </div>
    <div class="form-row">
        <label>&nbsp;</label>
        <input type="checkbox" id="node-input-loopprevention" style="display: inline-block; width: auto; vertical-align: top;">
        <label for="node-input-loopprevention" style="width: 65%;" data-i18n="mqtt-in.label.loopprevention"></label>
    </div>
    <div id="node-input-looppreventiongroup-container" class="form-row hide">
        <label for="node-input-looppreventiongroup"><i class="fa fa-globe"></i> <span data-i18n="mqtt-in.label.looppreventiongroup"></span></label>
        <input type="text" id="node-input-looppreventiongroup">
    </div>
</script>
<script type="text/javascript">
    RED.nodes.registerType('mqtt-in',{
        category: 'input',
        namespace: 'mqtt',
        defaults: {
            name: {value:""},
            topic: {value:"",required:true,validate: RED.validators.regex(/^(#$|(\+|[^+#]*)(\/(\+|[^+#]*))*(\/(\+|#|[^+#]*))?$)/)},
            broker: {type:"mqtt-broker", required:true},
            loopprevention: {value: false},
            looppreventiongroup: {type:"variable-loop-prevention-group", required: false}
        },
        color:"#d8bfd8",
        inputs:0,
        outputs:1,
        outputInfo: [
        	{
        		types: ["string"]
        	}
        ],
        icon: "bridge.png",
        label: function() {
            return this.name||this.topic||"mqtt";
        },
        labelStyle: function() {
            return this.name?"node_label_italic":"";
        },
        oneditprepare: function() {
            //{{{ Loop prevention
                if(this.loopprevention) $("#node-input-looppreventiongroup-container").show();
                $("#node-input-loopprevention").on("click", function() {
                    if(this.checked) {
                        $("#node-input-looppreventiongroup-container").show();
                    } else {
                        $("#node-input-looppreventiongroup-container").hide();
                    }
                });
            //}}}
        }
    });
</script>